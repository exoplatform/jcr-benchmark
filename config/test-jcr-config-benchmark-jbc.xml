<repository-service default-repository="repository">
  <repositories>
    <repository name="repository" system-workspace="system" default-workspace="collaboration">
      <security-domain>exo-domain</security-domain>
      <access-control>optional</access-control>
      <authentication-policy>org.exoplatform.services.jcr.impl.core.access.JAASAuthenticator</authentication-policy>
      <workspaces>
        <workspace name="system" auto-init-permissions="">
          <container class="org.exoplatform.services.jcr.impl.storage.jdbc.optimisation.CQJDBCWorkspaceDataContainer">
            <properties>
              <property name="source-name" value="jdbcexo" />
              <property name="db-structure-type" value="single" />
              <property name="db-tablename-suffix" value="SYS" />
              <property name="max-buffer-size" value="200k" />
              <property name="swap-directory" value="../temp/swap/system" />
            </properties>
            <value-storages>
              <value-storage id="1" class="org.exoplatform.services.jcr.impl.storage.value.fs.TreeFileValueStorage">
                <properties>
                  <property name="path" value="../temp/values/system" />
                </properties>
                <filters>
                  <filter property-type="Binary" />
                </filters>
              </value-storage>
            </value-storages>
          </container>
          <initializer>
            <properties>
              <property name="root-nodetype" value="nt:unstructured"/>
              <property name="root-permissions" value="any read;*:/platform/users read;*:/platform/users add_node;*:/platform/users set_property;*:/platform/users remove"/>
            </properties>
          </initializer> 
          <cache enabled="true" class="org.exoplatform.services.jcr.impl.dataflow.persistent.jbosscache.JBossCacheWorkspaceStorageCache">
            <properties>
                
                <property name="jbosscache-configuration" value="../config/test-jbosscache-data.xml" />
                <property name="jgroups-configuration" value="../config/udp-mux.xml" />
                <property name="jgroups-multiplexer-stack" value="false" />
                <property name="jbosscache-cluster-name" value="JCR-benchmark-data" />
                <property name="jbosscache-shareable" value="true" />

            </properties>
          </cache>
          <query-handler class="org.exoplatform.services.jcr.impl.core.query.lucene.SearchIndex">
            <properties>
              <property name="index-dir" value="../temp/index/db/system" />
              <property name="changesfilter-class" value="org.exoplatform.services.jcr.impl.core.query.jbosscache.JBossCacheIndexChangesFilter" />
              <property name="jbosscache-configuration" value="../config/test-jbosscache-indexer.xml" />
              <property name="jgroups-configuration" value="../config/udp-mux.xml" />
              <property name="jgroups-multiplexer-stack" value="false" />
              <property name="jbosscache-cluster-name" value="JCR-benchmark-index" />
              <property name="max-volatile-time" value="60" />
              <property name="jbosscache-shareable" value="true" />
              <property name="rdbms-reindexing" value="false" />
            </properties>
          </query-handler>
          <lock-manager class="org.exoplatform.services.jcr.impl.core.lock.jbosscache.CacheableLockManagerImpl">
            <properties>
              <property name="time-out" value="25m" />
              
              <!-- This block should be adopted for each DB, till not implemented programmatically -->
              <property name="jbosscache-configuration" value="../config/test-jbosscache-lock.xml" />
              <property name="jgroups-configuration" value="../config/udp-mux.xml" />
              <property name="jgroups-multiplexer-stack" value="false" />
              <property name="jbosscache-cluster-name" value="JCR-benchmark-lock" />
              <property name="jbosscache-cl-cache.jdbc.table.name" value="jcrlocks"/>
              <property name="jbosscache-cl-cache.jdbc.table.create" value="true"/>
              <property name="jbosscache-cl-cache.jdbc.table.drop" value="false"/>
              <property name="jbosscache-cl-cache.jdbc.table.primarykey" value="jcrlocks_pk"/>
              <property name="jbosscache-cl-cache.jdbc.fqn.column" value="fqn"/>
              <property name="jbosscache-cl-cache.jdbc.node.column" value="node"/>
              <property name="jbosscache-cl-cache.jdbc.parent.column" value="parent"/>
              <property name="jbosscache-cl-cache.jdbc.datasource" value="jdbcexo"/>
              <property name="jbosscache-shareable" value="true" />
            </properties>
          </lock-manager>
        </workspace>
        <workspace name="collaboration">
          <container class="org.exoplatform.services.jcr.impl.storage.jdbc.optimisation.CQJDBCWorkspaceDataContainer">
            <properties>
              <property name="source-name" value="jdbcexo" />
              <property name="db-structure-type" value="single" />
              <property name="db-tablename-suffix" value="COLAB" />
